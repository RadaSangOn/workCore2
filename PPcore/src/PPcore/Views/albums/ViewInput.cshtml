@model PPcore.Models.album

<br/>
<form asp-action="@ViewBag.FormAction">
    <div class="form-horizontal">
        <div style="position:relative;top:-150px;margin-right:.5em;float:right">
            <button id="btnSave" type="@ViewBag.ButtonUpperRightType" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-floppy-o" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;จัดเก็บ&nbsp;&nbsp;</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="rowversion" />
        <div class="row">
            <!-- info -->
            <div class="col-md-8">

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2 text-right"><label asp-for="album_name" class="control-label"></label></div>
                                <div class="col-md-8">
                                    <input asp-for="album_name" class="form-control" maxlength="100"/>
                                    <span asp-validation-for="album_name" class="text-danger" />
                                </div>


                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">

                                <div class="col-md-2 text-right"><label asp-for="album_desc" class="control-label"></label></div>
                                <div class="col-md-8">
                                    <input asp-for="album_desc" class="form-control" maxlength="200" />
                                    <span asp-validation-for="album_desc" class="text-danger" />
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2 text-right"><label asp-for="album_date" class="control-label"></label></div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input asp-for="album_date" class="form-control" readonly>
                                        <span class="input-group-btn">
                                            <button id="album_dateButton" class="btn btn-default" type="button" style="border-color:orangered;">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                    <span asp-validation-for="album_date" class="text-danger" />
                                </div>
                            </div>
                        </div>

                    </div>



                </div>

            </div>
            <!-- /info -->
        </div>
    </div>
</form>

<br/><br/>